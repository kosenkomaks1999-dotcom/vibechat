{
  "name": "voice-chat",
  "version": "1.0.0",
  "description": "Voice chat with modern UI",
  "main": "main.cjs",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dev": "http-server . -p 8080 -o",
    "build-browser": "node build-browser.js",
    "package-win": "electron-packager . VoiceChat --platform=win32 --arch=x64 --icon=assets/icons/icon.png --overwrite",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage"
  },
  "dependencies": {
    "electron": "^26.2.1",
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "electron-packager": "^17.1.2",
    "http-server": "^14.1.1",
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {},
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/**/__tests__/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}

{
  "name": "vibechat",
  "version": "1.0.0",
  "description": "VibeChat - голосовой чат приложение",
  "main": "main.js",
  "author": "VibeChat Team",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "publish": "electron-builder --publish always"
  },
  "build": {
    "appId": "com.vibechat.app",
    "productName": "VibeChat",
    "directories": {
      "output": "release"
    },
    "files": [
      "**/*",
      "!node_modules",
      "!release",
      "!logs",
      "!ignorelogs"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "resources/app/assets/icons/app-icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "kosenkomaks1999-dotcom",
      "repo": "vibechat",
      "releaseType": "release"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "rcedit": "^4.0.1"
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  }
}
